@model IEnumerable<CategoryDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Kategoriler</h1>
<a class="btn btn-primary mb-4" asp-action="Create" asp-controller="Category">Kategori Ekle</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Update" asp-controller="Category" asp-route-id="@item.Id" >Güncelle</a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" >Sil</a>
                </td>
            </tr>

        }
    </tbody>
    </table>

